{
  "manifest_version": 2,
  "name": "Startpage",
  "version": "2.6",
  "description": "The start of it all.",
  "author": "Marko Bajlovic - (des)mosthenes",
  "homepage_url": "https://www.github.com/ylor/newtab-home",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "browser_action": {
    "default_icon": {
      "48": "icon.svg",
      "96": "icon.svg"
    },
    "default_title": "Startpage"
  },
  "permissions": ["browserSettings", "webNavigation", "storage", "tabs", "activeTab"],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "applications": {
    "gecko": {
      "id": "newtab@home",
      "strict_min_version": "67.0"
    }
  }
}
